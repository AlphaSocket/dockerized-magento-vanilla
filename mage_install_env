#!/usr/bin/env
#
# System
php=$(which php)
n98magerun=$(which n98-magerun.phar)
composer=$(which composer.phar)
mysql=$(which mysql)
mageconfigsync=$(which mageconfigsync)
# General
project_name="$CONFIG_PROJECT_CODENAME"
project_description="$CONFIG_PROJECT_DESCRIPTION"
# Installation
installation_folder="$CONFIG_MAGENTO_INSTALL_FOLDER"
magento_version_by_name="$CONFIG_MAGENTO_VERSION"
locale="$CONFIG_MAGENTO_LOCALE"
timezone="$CONFIG_MAGENTO_TIMEZONE"
default_currency="$CONFIG_MAGENTO_DEFAULT_CURRENCY"
# DB
db_host="$CONFIG_DB_HOST"
db_name="$CONFIG_DB_NAME"
db_user="$CONFIG_DB_USER"
db_pass="$CONFIG_DB_PASS"
db_prefix="$CONFIG_DB_PREFIX"
# URL
url="$CONFIG_MAGENTO_URL"
use_rewrites="$CONFIG_MAGENTO_USE_REWRITES"
use_secure="$CONFIG_MAGENTO_USE_SECURE"
secure_base_url="$CONFIG_MAGENTO_SECURE_BASE_URL"
use_secure_admin="$CONFIG_MAGENTO_USE_SECURE_ADMIN"
skip_url_validation="$CONFIG_MAGENTO_SKIP_URL_VALIDATION"
# Admin
admin_username="$CONFIG_ADMIN_USERNAME"
admin_lastname="$CONFIG_ADMIN_LASTNAME"
admin_firstname="$CONFIG_ADMIN_FIRSTNAME"
admin_email="$CONFIG_ADMIN_EMAIL"
admin_password="$CONFIG_ADMIN_PASS"
session_save="$CONFIG_MAGENTO_SESSION_SAVE"
admin_frontname="$CONFIG_MAGENTO_ADMIN_FRONTNAME"
backend_frontname="$CONFIG_MAGENTO_BACKEND_FRONTNAME"
# Cache
disable_cache="$CONFIG_MAGENTO_DISABLE_CACHE"
# Privileges
set_privileges_ownership="$CONFIG_MAGENTO_SET_PRIVILEGES_OWNER"
file_owner="$CONFIG_MAGENTO_USER:$MAGENTO_GROUP"
# Composer
init_composer="$CONFIG_COMPOSER_INIT"
# Activate developer mode
activate_developer_mode_and_log="$CONFIG_MAGENTO_DEVELOPER_MODE"
